{
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": [
    "examples/**",
    "internal/**",
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md",
    "**/package.json"
  ],
  "npmClient": "yarn",
  "useNx": true,
  "version": "independent"
}
